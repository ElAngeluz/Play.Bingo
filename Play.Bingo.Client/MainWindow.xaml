<Window x:Class="Play.Bingo.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Play.Bingo.Client.Views"
        xmlns:vm="clr-namespace:Play.Bingo.Client.ViewModels"
        Title="Bingo" Height="350" Width="525" Icon="Images\Icon.ico">
    <Window.Resources>
        <vm:MainViewModel x:Key="ViewModel" />
    </Window.Resources>
    <Grid DataContext="{StaticResource ViewModel}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Viewbox Grid.ColumnSpan="2" >
            <v:BingoCardView DataContext="{Binding BingoCard}" />
        </Viewbox>
        <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
            <Button Width="54" ToolTip="Save card!"
                    Style="{StaticResource FlatButtonStyle}"
                    Command="{Binding SaveCommand}" >
                <Image Source="Images/Save.png" />
            </Button>
            <Button Width="54" ToolTip="Generate new card!"
                    Style="{StaticResource FlatButtonStyle}"
                    Command="{Binding GenerateCommand}" >
                <Image Source="Images/Random.png" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
