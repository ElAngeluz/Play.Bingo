<Window x:Class="Play.Bingo.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Play.Bingo.Client.Views"
        xmlns:vm="clr-namespace:Play.Bingo.Client.ViewModels"
        Title="Bingo" Height="350" Width="525">
    <Window.Resources>
        <vm:BingoCardViewModel x:Key="BingoCard" />
    </Window.Resources>
    <Grid>
        <v:BingoCardView HorizontalAlignment="Center" DataContext="{StaticResource BingoCard}" />
    </Grid>
</Window>
